{
    "manifest_version": 3,
    "name": "Instagram Feed Paginator",
    "version": "1.0",
    "description": "Add pagination to Instagram home feed - view 10 posts at a time",
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.instagram.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "48": "icon48.png",
        "128": "icon128.png"
    }
}